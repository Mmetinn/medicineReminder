    android:thickness="18dp">
    <solid android:color="#FFFFFF" />

    <stroke
        android:width="5dp"
        android:color="#2f6699" />
    <corners
        android:radius="3dp"></corners>
    <gradient
        android:startColor="#c8c8c8"
        android:endColor="#ffffff"
