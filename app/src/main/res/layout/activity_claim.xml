<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerClaim"
    tools:context="com.example.mehme.ilacsaati.claimActivity">
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/naviSearch"
        android:layout_height="match_parent"
        app:headerLayout="@layout/yan_menu_baslik"
        android:background="#ffffff"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/ivX"
            android:background="@mipmap/ic_launcher_alarmhap"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/herGunBilgiTx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            app:fontFamily="@font/" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"

                android:background="@drawable/shadow_bottom"/>
            <android.support.design.widget.BottomNavigationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_menu_claim"
                android:background="#ffffff"
                android:layout_gravity="bottom"
                app:menu="@menu/bottom_menu"></android.support.design.widget.BottomNavigationView>

        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
