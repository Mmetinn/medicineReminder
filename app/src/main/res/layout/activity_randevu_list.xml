<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".randevuListActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/gridimr"
        tools:layout_editor_absoluteX="35dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_hospital_hastane" />

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="RANDEVULAR"
            android:textSize="34sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_hospital_hastane" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridimr"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_marginTop="8dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="144dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/infoTx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Randevu Mevcut DeÄŸil"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>