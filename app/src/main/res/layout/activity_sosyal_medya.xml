<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerSosyal"
    tools:context="com.example.mehme.ilacsaati.sosyalMedyaActivity">
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/naviSearch"
        android:layout_height="match_parent"
        app:headerLayout="@layout/yan_menu_baslik"
        android:background="#ffffff"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="4">

            <!-- Row 1 -->

            <!-- Column 1 -->
            <android.support.v7.widget.CardView
                android:id="@+id/instangramm"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_row="0">

                <LinearLayout
                    android:id="@+id/instangrammm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_instagram"
                        android:onClick="instangramClick"
                        android:text="@string/instagram"
                        android:background="#dddddd"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/twitterr"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_row="0">

                <LinearLayout
                    android:id="@+id/twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_twitter"
                        android:onClick="twitterClick"
                        android:text="@string/twitter"
                        android:background="#dddddd"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/instangram"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_row="0">

                <LinearLayout
                    android:id="@+id/gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_gmail"
                        android:onClick="gmailClick"
                        android:layout_gravity="center"
                        android:text="@string/gmail"
                        android:background="#dddddd"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"

                android:background="@drawable/shadow_bottom"/>
            <android.support.design.widget.BottomNavigationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_menu_sosyal"
                android:background="#ffffff"
                android:layout_gravity="bottom"
                app:menu="@menu/bottom_menu"></android.support.design.widget.BottomNavigationView>

        </FrameLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
